 <div class="stadium-card">
<h1>Mon dashboard</h1>
<% if @bookings.empty?  %>
  <p>Vous n'avez pas encore de réservation</p>
<%else%>
  <p>Vous avez <%= @bookings.count %> réservation(s)</p>

<div>
  <h1>All my bookings</h1>
</div>

<div>
  <h2>Bookings to come</h2>
</div>

<div>
  <ul>
    <% @bookings.each do |booking| %>
      <%if booking.start_date >= Date.today %>
        <ul class="stadium-card">
          <p>Name: <%= booking.stadium.name %></p>
          <p>Start date: <%= booking.start_date %></p>
          <p><%= booking.end_date %></p>
          <p><%= link_to "View details", booking_path(booking), class: "btn btn-outline-primary" %></p>
        </ul>
      <% end %>
    <% end %>
  </ul>
</div>


<div>
  <h2>Past bookings</h2>
</div>

<div>
  <ul>
    <% @bookings.each do |booking| %>
      <%if booking.start_date < Date.today %>
        <ul class="stadium-card">
          <p>Name: <%= booking.stadium.name %></p>
          <p>Start date: <%= booking.start_date %></p>
          <p><%= booking.end_date %></p>
        </ul>
      <% end %>
    <% end %>
    <div><%= link_to "retourner à mon profile", profile_path, class: "btn btn-outline-primary" %></h3></div>
  </ul>


  <%end%>
</div>
