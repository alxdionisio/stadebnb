
<div class="container-form">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h1>New stadium</h1>
      <%= @error %>
      <%= simple_form_for @stadium do |f| %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :capacity %>
      <%= f.input :energy_class %>
      <%= f.input :price %>
      <%= f.input :pictures, as: :file, input_html: { multiple: true } %>
      <%= f.input :stadium_description %>
      <%= f.submit "Create", :confirm => 'Are your sure you want to book this stadium?', class: "btn btn-primary" %>
      <% end %>
      <br>
      <br>
      <%= link_to "Back to Stadiums list", stadia_path, class: "btn btn-primary" %>
      <br>
      <br>
    </div>
    <div class="col-3"></div>
  </div>
</div>
