
<div class="container-form">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h1>Edit stadium</h1>
      <%= simple_form_for @stadium do |f| %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :capacity %>
      <%= f.input :energy_class %>
      <%= f.input :price %>
      <%= f.input :stadium_description %>
      <%= f.submit "Update", class: "btn btn-primary" %>
      <% end %>
      <br><br>
      <%= link_to "Back to Stadiums list", stadia_path, class: "btn btn-primary" %> <br><br>
    </div>
    <div class="col-3"></div>
  </div>
</div>
