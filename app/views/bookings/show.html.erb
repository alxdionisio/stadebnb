<div class="container-booking">
  <h2>Congratulations, you've just booked your stadium!</h2>
  <h3>Here are your booking details</h3>

  <div class="booking-dates">
    <p><strong>Start Date:</strong> <%= @booking.start_date %></p>
    <p><strong>End Date:</strong> <%= @booking.end_date %></p>
  </div>

  <div class="booking-details">
    <p><strong>Stadium:</strong> <%= @booking.stadium.name %></p>
    <p><strong>Location:</strong> <%= @booking.stadium.location %></p>
    <p><strong>Capacity:</strong> <%= @booking.stadium.capacity %></p>
    <p><strong>Energy Class:</strong> <%= @booking.stadium.energy_class %></p>
    <p><strong>Price:</strong> <%= @booking.stadium.price %></p>
  </div>

  <div class="booking-total">
    <p><strong>Total Price:</strong> <%= @booking.total_price %></p>

    <div class="booking-buttons">
      <%= link_to "Back to Stadiums list", stadia_path, class: "btn btn-primary" %>
      <%= link_to "Back to My Bookings", bookings_path, class: "btn btn-primary" %>
</div>
